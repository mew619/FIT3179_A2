{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "width": 60,
    "height": 155,
    "data": { "url": "https://raw.githubusercontent.com/mew619/FIT3179_A2/main/data/population_by_age.json"},
    "title": {"text": "Bar chart to show the ages of different countries",
              "align": "left"},
    "mark": "bar",
    "encoding": {
      "column": {
        "field": "country", 
        "type": "nominal", 
        "spacing": 10,
        "title": null
      },
      "y": {
        "aggregate": "sum", 
        "field": "population",
        "title": "Population",
        "axis": {"grid": false}
      },
      "x": {
        "field": "age",
        "axis": {"title": null}
      },
      "color": {
        "field": "country",
        "scale": {
          "domain": ["Brazil", "China", "India", "Japan", "USA"],
          "range": ["#f0e442", "#d55e00", "#cc79a7", "#009e73", "#0072b2"]},
        "legend": null
      }
    },
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {"domainWidth": 1}
    }
  }