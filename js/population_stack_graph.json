{
    "$schema": "https://vega.github.io/schema/vega-lite/v4.json",
    "data": { "url": "https://raw.githubusercontent.com/mew619/FIT3179_A2/main/data/population_by_age.json"},
    "title": {"text": "Stacked bar chart to show the ages of different countries"},
    "mark": "bar",
    "encoding": {
      "column": {
        "field": "country", 
        "type": "ordinal", 
        "spacing": 10,
        "title": "Country"
      },
      "y": {
        "aggregate": "sum", 
        "field": "population",
        "title": "Population",
        "axis": {"grid": false}
      },
      "x": {
        "field": "age",
        "axis": {"title": "Age"}
      },
      "color": {
        "field": "country"
      }
    },
    "config": {
      "view": {"stroke": "transparent"},
      "axis": {"domainWidth": 1}
    }
  }